<% if @tag.errors.any? %>
  <%= @tag.errors.count %>件のエラーが発生しました
  <ul>
    <% @tag.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="row mb-5">
  <div class="col-md-5 offset-md-1">
    <h4><span class="title">タグ一覧・追加</span></h4>
  </div>
</div>


<div class="row">
  <%= form_with model: @tag, url: admin_tags_path, method: :post do |f| %>
    <div class="form-group form-inline">
      <div class="col-md-6"><%= f.text_field :name, placeholder: "タグ名" %></div>
      <div class="col-md-3"><%= f.submit "新規登録", class: "btn btn-success" %></div>
    </div>
  <% end %>
</div>

<div class="row">
  <table class='table table-hover table-inverse col-md-6'>
    <thead>
      <tr>
        <th colspan="3">タグ</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @tags.each do |tag| %>
      <tr>
        <td>
          <%= tag.name %>
        </td>
        <td>
          <%= link_to "編集する", edit_admin_tag_path(tag.id), class: "btn btn-success" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>