<div class="container">
  <%= render "admin/shared/error_messages", resource: @genre %>

  <div class="row justify-content-center mb-5">
    <h4><span class="title">ジャンル一覧・追加</span></h4>
  </div>

  <div class="row justify-content-center">
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
      <div class="d-flex">
        <div class="class mr-2"><%= f.text_field :name, placeholder: "ジャンル名" %></div>
        <div class><%= f.submit "新規登録", class: "btn btn-outline-success" %></div>
      </div>
    <% end %>
  </div>

  <div class="row justify-content-center">
    <table class='table table-hover table-inverse mt-3 col-md-6'>
      <thead class="text-center">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody class="text-center">
        <% @genres.each do |genre| %>
        <tr>
          <td class="text-align-center">
            <%= genre.name %>
          </td>
          <td>
            <%= link_to "削除する", admin_genre_path(genre.id), method: :delete, class: "btn btn-outline-danger", data: { confilm: "本当に退会しますか？" } %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>