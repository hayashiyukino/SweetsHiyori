<%= render "admin/shared/error_messages", resource: @genre %>

<div class="row mb-5">
  <div class="col-md-5 offset-md-1">
    <h4><span class="title">ジャンル一覧・追加</span></h4>
  </div>
</div>


<div class="row">
  <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <div class="form-group form-inline">
      <div class="col-md-6"><%= f.text_field :name, placeholder: "ジャンル名" %></div>
      <div class="col-md-3"><%= f.submit "新規登録", class: "btn btn-success" %></div>
    </div>
  <% end %>
</div>

<div class="row">
  <table class='table table-hover table-inverse col-md-6'>
    <thead>
      <tr>
        <th colspan="3">ジャンル</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.name %>
        </td>
        <td>
          <%= link_to "削除する", admin_genre_path(genre.id), method: :delete, class: "btn btn-danger", data: { confilm: "本当に退会しますか？" } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>