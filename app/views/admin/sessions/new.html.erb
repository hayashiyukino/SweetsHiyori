<div class="row justify-content-center">
    <h5><strong>管理者ログイン</strong></h5>
</div>

<div class="row justify-content-center">
  <%= form_with model: @admin, url: admin_session_path do |f| %>

    <div class="field">
      <%= f.label :メールアドレス %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 30 %>
    </div>

    <!--<div class="field">-->
    <!--  <#%= f.label :ＩＤ %><br />-->
    <!--  <#%= f.text_field :login_id, autofocus: true, autocomplete: "login_id", size: 30 %>-->
    <!--</div>-->

    <div class="field">
      <%= f.label :パスワード %><br>
      <%= f.password_field :password, autocomplete: "password", size: 30 %>
    </div>

    <div class="text-center mt-4">
      <%= f.submit "ログイン", class:"btn btn-info" %>
    </div>
  <% end %>
</div>

<%= render "admin/shared/links" %>
