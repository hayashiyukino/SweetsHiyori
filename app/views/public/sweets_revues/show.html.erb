<dev class="row justify-content-center">
  <div class="col-7">
    <div class="row">

      <div class="col-12">
        <% if @end_user.profile_image.attached? %>
          <%= image_tag @end_user.get_profile_image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_profile_image', size: "100x100" %>
        <% end %>
        <!--<#%= image_tag @sweets_revue.end_user.get_profile_image(80,90) %>-->
        <%= link_to @sweets_revue.end_user.nickname, end_user_path(@end_user) %>
        <!--<#% end %>-->
      </div>

      <div class="col-12 mx-auto">
        <h4><strong><%= @sweets_revue.sweets_name %></strong></h4>
      </div>


      <div class = "col-6">
        <div class="col-12 text-right">
            <%= @sweets_revue.tax_included_price %>（税込み）
            <%= link_to "編集", edit_sweets_revue_path(@sweets_revue) %>
        </div>
          <%= image_tag @sweets_revue.get_sweets_image(280,200) %>
          <div class="review ml-4 mt-2">
            <p>評価</p>
            <!--<#%= render [部分テンプレートファイルの指定], [ローカル変数]:[渡す値] %>-->
            <!--5段階評価 部分テンプレート-->
            <div class="review_star ml-5">
              <%= render "review_star", sweets_revue: @sweets_revue %>
            </div>
          </div>
          <div class="icon-box mt-3">
            <div class="icon ml-5">
              <!--いいね機能  部分テンプレート-->
              <%= render 'favorite', sweets_revue: @sweets_revue %>
            </div>
            <div class="icon ml-5">
              <!--コメント数-->
              <i class="far fa-comment fa-2x"></i><%= @sweets_revue.post_comments.count %>
            </div>
          </div>
      </div>

      <div class="col-6">
        <div class="row-2 mt-4 box">
          <%= @sweets_revue.shop_name %>
        </div>
        <div class="">
          <%= @sweets_revue.buy_place %><br>
        </div>
        <div class="">
          <%= @sweets_revue.genre.name %><br>
        </div>
        <div class="">
          <% @sweets_revue.tags.each do |tag| %>
            <%= tag.name %>
          <% end %>
        </div>
        <div class="">
          <%= @sweets_revue.sweets_introduction %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-5">
      <!--コメントフォーム-->
      <div class="row-5 mt-5">
        <%= form_with model: [@sweets_revue, @post_comment] do |f| %>
          <%= f.text_area :comment, rows: '3', placeholder: "コメントをここに" %>
          <%= f.submit "投稿" %>
        <% end %>
      </div>
      <div>
        <% @sweets_revue.post_comments.each do |post_comment| %>
          <%= post_comment.id %>
          <%= post_comment.comment %>
          <%= link_to post_comment.end_user.nickname, end_user_path(post_comment.end_user_id) %>
          <% if post_comment.end_user == current_end_user %>
            <%= link_to "削除", sweets_revue_post_comment_path(post_comment.sweets_revue, post_comment), method: :delete %>
          <% end %>
        <% end %>
      </div>
  </div>
</div>
