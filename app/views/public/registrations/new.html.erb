<div class="row justify-content-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :名前 %><br>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", size: 30 %>
    </div>

    <div class="field">
      <%= f.label :ニックネーム %><br>
      <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", size: 30 %>
    </div>

    <div class="field">
     <%= f.label :メールアドレス %><br>
     <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 30 %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", size: 30 %>
    </div>

    <div class="field">
      <%= f.label :パスワード（確認） %><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 30 %>
    </div>

    <div class="actions mt-4">
      <%= f.submit "新規登録", class: "btn btn-info" %>
    </div>
  <% end %>
</div>

<div class="row justify-content-center mt-5">
  <P>既に登録済みの方は
    <%= link_to 'こちら', new_end_user_session_path %>
     からログインしてください
  </p>
</div>

