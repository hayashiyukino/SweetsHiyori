<div class = "row">
  <!--サイドバー 検索-->
  <div class = "col-4">
    <div class="d-flex my-2">
      <h5><strong>投稿検索</strong></h5>
    </div>
    <!--検索機能 部分テンプレート-->
    <%= render 'public/sweets_revues/search' %>
  </div>

  <!--メイン 投稿閲覧-->
  <div class = "col-8">
    <!--タイトル表示の切り替え-->
    <% if @genre %>
			<h2 class="section-ttl"><%= @genre.name %>の商品一覧 (全<%= @sweets_revues.count %>件)</h2>
		<% else %>
			<h2 class="section-ttl">商品一覧 (全<%= @sweets_revues.count %>件)</h2>
		<% end %>
		<!--絞り込み表示-->
    <div class="d-flex flex-lg-wrap items_width">
  		<% if @sweets_revues.present? %>
        <% @sweets_revues.each do |sweets_revue| %>
          <div class="pr-3">
            <%= link_to sweets_revue_path(sweets_revue)  do %>
            <p><%= sweets_revue.sweets_name %></p>
              <%= image_tag sweets_revue.get_sweets_image(80, 60) %>
            <% end %>
            <!--5段階評価 部分テンプレート-->
            <%= render "review_star", sweets_revue: sweets_revue %>
            <!--コメント数表示-->
            <i class="far fa-comment fa-2x"></i><%= sweets_revue.post_comments.count %>
            <!--いいね機能部分テンプレート-->
            <%= render 'favorite', sweets_revue: sweets_revue %>
          </div>
        <% end %>
      <% else %>
  			<h3>該当する投稿が見つかりませんでした。</h3>
  		<% end %>
    </div>
  </div>
</div>
