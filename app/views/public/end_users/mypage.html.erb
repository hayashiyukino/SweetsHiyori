<div class = "row">
  <div class = "col-3">
    <% if end_user_signed_in? %>
      <p><%= current_end_user.name %>さんのマイページ</p>
    <% end %>
  </div>
  <div class = "col-5">
    <h3>
    <% if end_user_signed_in? %>
      <p><%= current_end_user.nickname %>の投稿一覧</p>
    <% end %>
    </h3>
  </div>
  <div class = "col-4">
    <div class="new_postsweets_link">
      <%= link_to new_sweets_revue_path do %>
        <p>新規投稿</p>
      <% end %>
    </div>
    <!--部分テンプレート-->
    <p>
      新着順
    </p>
    <p>
      いいね数順
    </p>
  </div>
</div>

<div class = "row">
  <div class = "col-4">
    <!--部分テンプレート-->
    <div class = "icon">
      <% if @end_user.profile_image.attached? %>
        <%= image_tag end_user.get_profile_image, size: "100x100" %>
      <% else %>
        <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
      <%= link_to edit_infomation_path(@end_user) do %>
        <p>編集ボタン</p>
      <% end %>
    </div>
    <div class = "infomationbox">
      <div>
    	  <p>ニックネーム</p>
    	  <%= @end_user.nickname %>
      </div>
      <div>
    	  <p>introduction</p>
        <%= @end_user.introduction %>
      </div>
      <div>
        <%= @end_user.sweets_revues.count %>投稿
      </div>
      <div>
          <p>follows</p>
          <p><%= link_to @end_user.followings.count, end_user_followings_path(@end_user) %></p>
          <p>followers</p>
          <p><%= link_to @end_user.followers.count, end_user_followers_path(@end_user) %></p>
      </div>
    </div>
  </div>
  <div class = "col-8">
    <!--投稿部分テンプレート-->
    <table>
      <tbody>
        <% @sweets_revues.each do |sweets_revue| %>
          <div class="pr-3">
            <%= link_to sweets_revue_path(sweets_revue)  do %>
              <%= image_tag sweets_revue.get_image(80, 60) %>
            <% end %>
            <%= link_to sweets_revue.sweets_name, sweets_revue_path(sweets_revue.id) %>
            <!--5段階評価 部分テンプレート-->
            <!--<#%= render "sweets_revues/review_star", sweets_revue: sweets_revue %>-->
            <!--コメント数表示-->
            <p><%= sweets_revue.post_comments.count %>コメント</p>
            <!--いいね機能部分テンプレート-->
            <!--<#%= render 'sweets_revues/favorite', sweets_revue: sweets_revue %>-->
          </div>
        <% end %>
      </tbody>
    </table>
  </div>
</div>