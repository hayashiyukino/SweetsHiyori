<div class="container">
<div class="row mt-3">
  <div class="col-lg-12 mx-auto">
    <h4 class="mb-3">会員一覧</h4>
    <table class="table table-bordered">
      <!--<thead class="table-active">-->
      <!--  <tr>-->
      <!--    <th>会員ID</th>-->
      <!--    <th>氏名</th>-->
      <!--    <th>メールアドレス</th>-->
      <!--    <th>ステータス</th>-->
      <!--  </tr>-->
      <!--</thead>-->
      <tbody>
        <% @end_users.each do |end_user| %>
          <tr>
            <td><%= end_user.id %></td>
            <td>
              <%= image_tag end_user.get_profile_image(100,80) %>
            </td>
            <td>
              <%= link_to end_user.nickname, end_user_path(end_user) %>
            </td>
            <td>
              投稿<%= end_user.sweets_revues.count %>件
            </td>
            <td>
              <%= end_user.followings.count %>フォロワー
            </td>
            <td>
              <!--フォロー機能非同期済み-->
              <div id="follow_<%= end_user.id %>">
                <%= render partial: "public/relationships/follow", locals:{ end_user: end_user } %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-center">
      <%= paginate @end_users %>
    </div>
  </div>
</div>
</div>