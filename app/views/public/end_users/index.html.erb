      <tbody>
        <% @end_users.each do |end_user| %>
          <tr>
            <td><%= end_user.id %></td>
            <td>
              <% if end_user.image.attached? %>
                <%= image_tag end_user.image, size: "100x100" %>
              <% else %>
                <%= image_tag 'no_image', size: "100x100" %>
              <% end %>
            </td>
            <td>
              <%= link_to end_user.nickname, end_user_path(end_user) %>
            </td>
            <td>
              <%= end_user.sweets_revues.count %>件
            </td>
            <td>フォロー数</td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>
