<!--エラーメッセージ-->
<%= render "public/shared/error_messages", resource: @end_user %>

<div class="row justify-content-center">
  <h5><strong>会員情報編集</strong></h5>
</div>


<div class="row justify-content-center">
  <%= form_with model: @end_user, url: end_users_information_path, method: :patch do |f| %>
    <div class="field">
      <%= f.label :名前 %><br>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", size: 30 %>
    </div>

    <div class="field">
      <%= f.label :ニックネーム %><br>
      <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", size: 30 %>
    </div>

    <div class="field">
     <%= f.label :メールアドレス %><br>
     <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 30 %>
    </div>

    <div class="field">
     <%= f.label :アイコン画像 %><br>
     <%= f.file_field :profile_image, accept: "image/*" %>
    </div>

    <div class="field">
      <%= f.label :自己紹介 %><br>
      <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
    </div>

    <div class= "action mt-4">
      <%= f.submit '変更を保存', class:"btn btn-success mr-4" %>
      <%= link_to "退会する", end_users_confirm_path(@end_user), class: "btn btn-danger" %>
    </div>

      <!--%= link_to "削除", admin_item_path(@item.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>-->
  <% end %>
</div>
